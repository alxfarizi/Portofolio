{
  "openapi": "3.1.0",
  "info": {
    "title": "Tasks RESTful API",
    "description": "API Spec for Tasks RESTful API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api"
    }
  ],
  "paths": {
    "/tasks": {
      "get": {
        "security": [{
          "TaskAuth": []
        }],
        "tags": ["Tasks API"],
        "description": "Get all tasks",
        "summary": "Get all tasks",
        "responses": {
          "200": {
            "description": "Successful get all tasks",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number"
                    },
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Tasks"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post":{
        "security": [{
          "TaskAuth": []
        }],
        "tags": ["Tasks API"],
        "description": "Create new task",
        "summary": "Create new task",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOrUpdateTasks"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful create tasks",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number"
                    },
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "$ref": "#/components/schemas/Tasks"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tasks/{tasksID}/": {
      "get": {
        "security": [{
          "TaskAuth": []
        }],
        "tags": ["Tasks API"],
        "description": "Get task by Id",
        "summary": "Get task by Id",
        "parameters": [
          {
            "name": "tasksID",
            "in": "path",
            "description": "Tasks Id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful get task by Id",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number"
                    },
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "$ref": "#/components/schemas/Tasks"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "security": [{
          "TaskAuth": []
        }],
        "tags": ["Tasks API"],
        "summary": "Update task by Id",
        "description": "Update task by Id",
        "parameters": [
          {
            "name": "tasksID",
            "in": "path",
            "description": "Tasks Id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOrUpdateTasks"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful update task by Id",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number"
                    },
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "$ref": "#/components/schemas/Tasks"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "security": [{
          "TaskAuth": []
        }],
        "tags": ["Tasks API"],
        "description": "Delete task by Id",
        "summary": "Delete task by Id",
        "parameters": [
          {
            "name": "tasksID",
            "in": "path",
            "description": "Tasks Id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful delete task by Id",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "TaskAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "TASK-API-KEY",
        "description": "Authentication for Tasks API"
      }
    },
    "schemas": {
      "CreateOrUpdateTasks": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "pending",
              "in_progress",
              "done"
            ]
          },
          "deadline": {
            "type": "string",
            "format": "date"
          }
        }
      },
      "Tasks": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "pending",
              "in_progress",
              "done"
            ]
          },
          "deadline": {
            "type": "string",
            "format": "date"
          }
        }
      }
    }
  }
}